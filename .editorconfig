# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix style newlines
# Newline ending every file
# Max Length 120
# Charset UTF-8
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 120
charset = utf-8
trim_trailing_whitespace = true

# 4 spaces for indentation
[{*.py, *.toml, *.md}]
indent_style = space
indent_size = 4
